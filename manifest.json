{
    "name": "Blurify",
    "version": "0.1",
    "description": "blur your personal data with just one click",
    "manifest_version": 2,

    "background": {
        "scripts": [
            "src/js/background.js"
        ],
        "persistent": "false"
    },
    "browser_action": {
        "default_popup": "src/blurify.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "*://*/*"
    ],
    "web_accessible_resources": [
        "src/js/*.js",
        "src/expression.js"
     ]
}